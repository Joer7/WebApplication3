@using System.Data;
@model DataTable
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 scope ="col" >Bienvenido</h1>
    <p>

    </p>
    <h1 style="border:1px solid black;margin: auto;width:700px">Mostrar Pedidos</h1>

    @*@Html.ActionLink("Agregar", "Pedidoes");*@
    <table class="table table-striped table-dark" style="border:1px solid black;margin: auto;width:700px  " >
        <tr table table-striped table-dark>
            <td style="width:14%;">Cod_Plato</td>
            <td style="width:14%;">Cod_Cliente</td>
            <td style="width:14%;">Nombre</td>
            <td style="width:14%;">Nombre_Plato</td>
            <td style="width:14%;">Cantidad</td>
            <td style="width:14%;">Precio</td>
            <td style="width:14%;">Total_Pago</td>
        </tr>
        @foreach (DataRow r in Model.Rows)
        {
            <tr table table-striped table-dark>
                <td style="width:14%;">@Convert.ToString(r["codPlato"])</td>
                <td style="width:14%;">@Convert.ToString(r["codCliente"])</td>
                <td style="width:14%;">@Convert.ToString(r["Apellido"])</td>
                <td style="width:14%;">@Convert.ToString(r["NamePlato"])</td>
                <td style="width:14%;">@Convert.ToString(r["cantidad"])</td>
                <td style="width:14%;">@Convert.ToString(r["precio"])</td>
                <td style="width:14%;">@Convert.ToString(r["totalPedido"])</td>
            </tr>
        }

    </table>
    <table style="border:1px solid black;margin: auto;width:700px">
        <tr>
            <td style="width:14%;">
                @if (TempData["ERROR"] != null)
                {
                    <hr />
                    <span style="color:red; font-size:14px" ;>
                        @TempData["ERROR"].ToString();
                    </span>
                }
                @if (TempData["MSG"] != null)
                {
                    <hr />
                    <span style="color:navy; font-size:14px" ;>
                        @TempData["MSG"].ToString()
                    </span>
                }


                
            </td>

        </tr>
    </table>

    <p class="btn btn-outline-secondary">Agregar <a href="http://localhost:11045/Pedidoes">Nuevo Pedido</a>.</p>
</div>
