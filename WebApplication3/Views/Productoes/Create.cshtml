@model WebApplication3.Models.Producto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Crear</h4>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-info"></div>
        
            <div class="form-group">
                <label asp-for="precio" class="control-label"></label>
                <input asp-for="precio" class="form-control alert alert-primary" />
                <span asp-validation-for="precio" class="text-info"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamePlato" class="control-label"></label>
                <input asp-for="NamePlato" class="form-control alert alert-primary" />
                <span asp-validation-for="NamePlato" class="text-info"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success" asp-action="Index">Volver a la Lista</a>
</div>

