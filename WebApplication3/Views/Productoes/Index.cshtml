@model IEnumerable<WebApplication3.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Producto</h1>

<p>
    <a class="btn btn-secondary" asp-action="Create">Crear Nuevo</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NamePlato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamePlato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.Cod_Plato">Editar</a> |
                <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Cod_Plato">Detalles</a> |
                <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.Cod_Plato">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
